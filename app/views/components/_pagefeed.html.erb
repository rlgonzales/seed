<div class="span-12">
  <% form_for @component, :url => components_path(@page, @component), :html => {:class => "seed-admin tight", :id => "changer"} do |f| -%>
    <%= f.error_messages %>
    <div id="fieldset">
      <div class="input-row">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="input-row">
        <%= f.label :source_page %>
        <select name="component[source_page]" id="component_source_page">
          <%= options_from_tree_for_select(Page.all_pages_for_dropdown(params[:page_id]), :id, :name, @component.source_page) %>
        </select>
      </div>
      <div class="input-row">
        <%= f.label :order, "Sort Order" %>
        <%= f.select(:order, Component::ORDER_OPTIONS) %>
      </div>
      <div class="input-row">
        <%= f.label :limit %>
        <%= f.select(:limit, Component::LIMIT_OPTIONS) %>
      </div>
    </div>
    <%= f.hidden_field :component_type, :value => "pagefeed" %>
    <div class="submit">
      <%= f.submit submit %> or <%= link_to_function 'cancel', 'history.go(-1)' %>
    </div>
  <% end %>
</div>
<div class="span-5">
	<div id="seed-notes">
		<h4>Component Type:</h4>
		<h5>Page Feed</h5>
		<p>Displays links to articles from another page on this site.</p> 
		<p>Select the source page, the display order and the number of items to display.</p> 
	</div>
</div>
